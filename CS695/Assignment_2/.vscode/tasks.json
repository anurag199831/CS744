{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "/usr/bin",
            }
        },
        {
            "type": "shell",
            "label": "g++ libvirt build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-lvirt",
                "-lpthread",
            ],
            "options": {
                "cwd": "/usr/bin",
            }
        }
    ],
    "version": "2.0.0"
}