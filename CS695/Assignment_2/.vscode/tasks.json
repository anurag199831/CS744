{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file lvirt",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/manager.cpp",
                "-o",
                "${fileDirname}/manager.out",
                "-lvirt",
                "-lpthread"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}