{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${workspaceDir}",
            }
        },
        {
            "type": "shell",
            "label": "g++ libvirt build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lvirt"
            ],
            "options": {
                "cwd": "${workspaceDir}",
            }
        }
    ],
    "version": "2.0.0"
}